<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --color-bg: #ffffff;
    --color-text: #1a1a1a;
    --color-text-muted: #6b7280;
    --color-border: #e5e7eb;
    --color-accent: #636B2F;
    --color-accent-hover: #636B2F;
    --color-surface: #f9fafb;
    --font: 'Space Mono', monospace;
    --nav-height: 70px;
    --sidebar-width: 320px;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font);
    line-height: 1.6;
    color: var(--color-text);
    background: var(--color-bg);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Navigation */
  .nav {
    position: fixed;
    top: 0;
    left: var(--sidebar-width);
    right: 0;
    height: var(--nav-height);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    z-index: 100;
  }

  .nav-container {
    max-width: 100%;
    height: 100%;
    padding: 0 2rem;
    padding-left: 2rem;
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }

  .logo {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-accent);
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -1.45rem;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent);
  }

  /* Layout */
  .layout {
    min-height: 100vh;
  }

  /* Sidebar - extends to top of page */
  .sidebar {
    position: fixed;
    left: 0;
    top: 0; /* Starts at very top */
    width: var(--sidebar-width);
    height: 100vh; /* Full height */
    background: var(--color-surface);
    overflow-y: auto;
    z-index: 50; /* Behind nav */
    background-color: #F2F0EF;
  }

  .sidebar-content {
    padding-top: var(--nav-height); /* Add padding for nav */
    padding-left: 2rem;
    padding-right: 2rem;
    padding-bottom: 3rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .profile-section {
    text-align: center;
    padding-top: 2rem;
  }

  .profile-image {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1.5rem;
  }

  .profile-name {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .profile-title {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-accent);
    margin-bottom: 0.25rem;
  }

  .profile-subtitle {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .bio-section {
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .bio-text {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    text-align: center;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .quick-links {
    padding-top: 1rem;
  }

  .quick-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--color-accent);
    color: white;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.2s ease;
  }

  .quick-link:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
  }

  /* Main Content */
  .main-content {
    margin-left: var(--sidebar-width);
    margin-top: var(--nav-height);
    padding-left: 2rem;  /* Match nav-container padding-left */
    padding-right: 3rem;
    padding-top: 3rem;
    padding-bottom: 3rem;
    max-width: 900px;
  }

  /* Typography */
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 1.875rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.3;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    scroll-margin-top: calc(var(--nav-height) + 2rem);
  }

  h3 {
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.4;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  p {
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  code {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background: var(--color-surface);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    border: 1px solid var(--color-border);
  }

  pre {
    background: var(--color-surface);
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--color-border);
  }

  pre code {
    background: none;
    padding: 0;
    border: none;
  }

  ul, ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  /* Sections */
  section {
    margin-bottom: 3rem;
    scroll-margin-top: calc(var(--nav-height) + 2rem);
  }

  /* Updates Section */
  .updates-list {
    display: grid;
    gap: 0;
    border-left: 2px solid var(--color-accent);
    padding-left: 0;
  }

  .update-item {
    padding: 1rem 0 1rem 1.5rem;
    position: relative;
  }

  .update-item:last-child {
    border-bottom: none;
  }

  .update-date {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .update-text {
    margin: 0;
    color: var(--color-text);
    font-size: 0.9375rem;
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    :root {
      --sidebar-width: 280px;
    }

    .main-content {
      padding: 2rem;
    }
  }

  @media (max-width: 768px) {
    .nav {
      left: 0; /* Full width on mobile */
    }

    .nav-container {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .logo {
      font-size: 1rem;
    }

    .layout {
      grid-template-columns: 1fr;
    }

    .sidebar {
      position: static;
      width: 100%;
      height: auto;
      border-right: none;
      border-bottom: 1px solid var(--color-border);
    }

    .profile-section {
      margin-top: 2rem;
    }

    .sidebar-content {
      padding: 2rem 1.5rem;
    }

    .profile-image {
      width: 120px;
      height: 120px;
    }

    .main-content {
      margin-left: 0;
      margin-top: var(--nav-height);
      padding: 2rem 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.5rem;
      margin-top: 3rem;
    }
  }
</style>